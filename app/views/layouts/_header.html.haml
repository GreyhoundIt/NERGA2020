%body
  %header
    %img.logo{alt: "NERGA Logo", src: "#{asset_path( 'NERGALogo.svg' )}"}/
    %button.js-open-menu.button Menu
    %nav.js-navigation.navigation
      %ul.navbar-nav
        %li.nav-item.nav-item-top
          = link_to "Home", root_path
        %li.nav-item.nav-item-top
          = link_to "Rules", rules_path
        %li.nav-item.nav-item-top
          %a.nav-link.dropdown-trigger{href: "#"} INTER
          %ul.nav-dropdown
            - inter_menu_items.each do |zone|
              %li.nav-dropdown-item= link_to "#{zone.menu_name}" , zone_path(zone)
        %li.nav-item.nav-item-top
          %a.nav-link.dropdown-trigger{href: "#"} RABBITS
          %ul.nav-dropdown
            - rabbits_menu_items.each do |zone|
              %li.nav-dropdown-item= link_to "#{zone.menu_name}" , zone_path(zone)
        %li.nav-item.nav-item-top
          = link_to "Finals Day", finals_path
        %li.nav-item.nav-item-top
          = link_to "Honours", honours_path
        %li.nav-item.nav-item-top
          = link_to "Links", links_path
        %li.nav-item.nav-item-top
          = link_to "Guidance", guidance_path
        %li.nav-item.nav-item-top
          %a.nav-link.dropdown-trigger{href: "#"} Policies
          %ul.nav-dropdown
            %li.nav-dropdown-item= link_to "Adult Safeguarding Policy" ,  asset_path("/Adults-Safeguarding-Policy-Procedures-Club-NERGA.pdf"), target: :_blank
            %li.nav-dropdown-item= link_to "Children Safeguarding Policy" ,  asset_path("/Children-Young-People-Safeguarding-Policy-NERGA.pdf"), target: :_blank
        - if user_signed_in?
          %li.nav-item.nav-item-top
            = link_to( destroy_user_session_path, method: :delete) do
              %span
                %i.fas.fa-sign-out-alt
                Logout
        - else
          %li.nav-item.nav-item-top
            = link_to new_user_session_path do
              %span
                %i.fas.fa-user-circle
                Log in
  - if current_user&.admin
    = render 'layouts/admin'
